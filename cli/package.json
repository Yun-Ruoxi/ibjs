{
  "name": "@ibjs/cli",
  "version": "0.0.6",
  "description": "IbJS's command line tools",
  "author": "Yun-Ruoxi <moxcblack@gmail.com> (https://github.com/Yun-Ruoxi)",
  "license": "MIT",
  "homepage": "https://github.com/ibjs/cli",
  "repository": {
    "url": "git+https://github.com/ibjs/cli.git"
  },
  "bugs": {
    "url": "https://github.com/ibjs/cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "ibjs": "dist/index.cjs",
    "ib": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typecheck && unbuild",
    "lint": "eslint . --fix",
    "format": "ib prettier-write",
    "commit": "ib git-commit",
    "cleanup": "ib cleanup",
    "ncu": "ib ncu",
    "publish-pkg": "pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "release": "ib release && pnpm build && pnpm publish-pkg"
  },
  "dependencies": {
    "@ibjs/changelog": "^0.0.2",
    "bumpp": "9.1.1",
    "c12": "1.4.1",
    "cac": "6.7.14",
    "enquirer": "2.3.6",
    "execa": "7.1.1",
    "kolorist": "1.8.0",
    "lint-staged": "13.2.2",
    "minimist": "1.2.8",
    "npm-check-updates": "16.10.12",
    "rimraf": "5.0.1"
  },
  "devDependencies": {
    "@ibjs/cli": "link:",
    "@types/node": "20.3.1",
    "eslint": "8.42.0",
    "@ibjs/eslint-config": "^0.0.2",
    "simple-git-hooks": "2.8.1",
    "tsx": "3.12.7",
    "typescript": "5.1.3",
    "unbuild": "1.2.1"
  },
  "ibjs": {
    "useIbToken": true
  }
}
